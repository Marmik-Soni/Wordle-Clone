{
  "name": "server",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint . --ext .ts,.tsx --fix --ignore-path ../.gitignore",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
